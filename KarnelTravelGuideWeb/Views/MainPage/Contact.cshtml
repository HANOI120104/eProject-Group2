@{
    ViewData["Title"] = "Contact Us";
}

<link href="~/css/contact.css" rel="stylesheet" />
<div class="banner-container">
    <h2>CONTACT US</h2>
    <ul>
        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li><span>>></span> Contact Us</li>
    </ul>

</div>
<div class="contact-container">
    <div class="feedback-form-container">
        <div class="container" style="width: 70%; padding: 0;">
            <div class="form-section">
                <div class="form-heading">
                    <div class="row">
                        <div class="col-lg-4">
                            <h1>Feedback Form</h1>
                            <p>Sharing your experince</p>
                        </div>
                        <div class="col-lg-4">
                            <a href=""><i class="bi bi-geo-alt-fill"></i>XXXX, YYYY, ZZZZS</a>
                        </div>
                        <div class="col-lg-4">
                            <a href="" style="margin-bottom: 10px;">
                                <i class="bi bi-envelope-fill"></i>Aptech@aptech.vn
                            </a>
                            <a href=""><i class="bi bi-telephone-fill"></i>0000000001</a>
                        </div>
                    </div>
                </div>
                <form asp-action="AddContact" method="post">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-section-feedback">
                            <label for="">Email</label>
                            <input type="text" placeholder="Enter your email">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="input-section-feedback">
                            <label for="">Feed Back</label>
                            <textarea name="" id="" cols="10" rows="5"
                                      placeholder="Enter your feed back"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="btn-feedback">
                            <input type="submit" class="btn">
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
    <div class="feedback-list-container">
        <div class="container" style="width: 70%; padding: 0;">
            <div class="swiper my-swiper">
                <div class="swiper-wrapper">
                    @foreach (var feedback in Model)
                    {
                        <div class="swiper-slide">
                            <div class="feedback-card">
                                <div class="top">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <div class="img-icon">
                                                <img src="/Images/Img/1.jpg" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-9">
                                            <h5>@feedback.Email</h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="bottom">
                                    <p>@feedback.ContactMessage</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="~/js/contact.js"></script>